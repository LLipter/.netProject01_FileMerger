<Window x:Class="ImageStitcher.CropperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageStitcher"
        mc:Ignorable="d"
        Title="Cropper" Height="300" Width="463.077" ResizeMode="NoResize">
    <Grid>
        <Button Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="27,36,0,0"
                Name="btnChooseFile" Click="btnChooseFile_Click"/>
        <Button Content="Save As" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="27,176,0,0"
            x:Name="btnSavePath" Click="btnSavePath_Click"/>
        <Button Content="Crop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" Margin="27,75,0,0"
                Name="btnCrop" Click="btnCrop_Click"/>
        <Image HorizontalAlignment="Left" Height="199" VerticalAlignment="Top" Width="280" Margin="150,36,0,0"
               Name="imgPreview"/>
        <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="27,122,0,0" Width="99"
               Name="lblSize"
               HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
